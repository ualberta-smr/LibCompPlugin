<idea-plugin>
    <id>my_Plugin.LibraryCompare</id>
    <name>LibraryComparison</name>
    <vendor email="relhajj@ualberta.ca" url="http://cs.ualberta.ca">Rehab el hajj</vendor>



    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->

        <action id="EditorBasics.EditorIllustrationAction"
                class="org.intellij.sdk.editor.EditorIllustrationAction"
                popup="true"
                text="Library Comparison"
                description="Replaces selected text with suggested library."
        >
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>

        </action>

           <!-- Add your actions here -->
            <group id="MyPlugin.test" text="Library Compare"  popup="true">

                <!--<action id="Myplugin.Textboxes" class="Mypackage.TextBoxes" text="Text _Boxes" description="A  menu item" />
                <action id="Myplugin.Dialogs" class="Mypackage.MyShowDialog" text="Show _Dialog" description="A  menu item" />-->
                <action id="EditorBasics.EditorIllustrationAct"
                        class="org.intellij.sdk.editor.EditorAction2"
                        popup="true"
                        text="User Profile"
                        description="Replaces selected text with suggested library."
                >
                    <keyboard-shortcut keymap="$default" first-keystroke="control alt C" second-keystroke="G"/>
                </action>

                <action id="EditorBasics.EditorIllustrationAct3"
                        class="org.intellij.sdk.editor.EditorAction3"
                        popup="true"
                        text="Rate it"
                        description="Replaces selected text with suggested library."
                >
                    <keyboard-shortcut keymap="$default" first-keystroke="control alt G" second-keystroke="C"/>
                </action>

                <add-to-group group-id="ToolsMenu" anchor="first"  />
            </group>


    </actions>
    <application-components>
        <component>
            <implementation-class>MainClassPlugin</implementation-class>
        </component>
        <component>
            <implementation-class>ModuleClassComponent</implementation-class>
        </component>
    </application-components>
    <project-components>
        <component>
            <implementation-class>MainClassPlugin</implementation-class>
        </component>
    </project-components>
    <module-components>
        <component>
            <implementation-class>ModuleClassComponent</implementation-class>
        </component>
    </module-components>
</idea-plugin>